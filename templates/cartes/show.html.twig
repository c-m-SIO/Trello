{% extends 'base.html.twig' %}

{% block title %}Cartes{% endblock %}

{% block body %}
    <h1>Cartes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carte.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ carte.titre }}</td>
            </tr>
            <tr>
                <th>Date_creation</th>
                <td>{{ carte.dateCreation ? carte.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin</th>
                <td>{{ carte.dateFin ? carte.dateFin|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Date_fin_prevu</th>
                <td>{{ carte.dateFinPrevu ? carte.dateFinPrevu|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cloture</th>
                <td>{{ carte.cloture ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Fichier</th>
                <td>{{ carte.fichier }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ carte.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cartes_index') }}">back to list</a>

    <a href="{{ path('app_cartes_edit', {'id': carte.id}) }}">edit</a>

    {{ include('cartes/_delete_form.html.twig') }}
{% endblock %}
