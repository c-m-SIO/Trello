<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>Création de compte</title>
    <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css'>
</head>
<body class="bg-gradient-to-tr from-blue-200 via-indigo-200 to-pink-200">
    
    <div class="min-h-screen flex items-center justify-center">
        <div class="bg-white p-8 rounded-lg shadow-md w-96 bg-opacity-80">
            <div class="flex justify-center mb-8">
                <img src="{{ asset('images/Logo.png') }}" class="w-12 h-12" alt="logo" style="border-radius: 5px;">
            </div>
            <h2 class="text-2xl font-bold text-center text-gray-700 mb-8">Créer un compte</h2>
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">Nom</label>
                    {{ form_widget(registrationForm.nom) }}
                    {# <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500" required> #}
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">Prenom</label>
                    {{ form_widget(registrationForm.prenom) }}
                    {# <input type="text" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500" required> #}
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">Email</label>
                    {{ form_widget(registrationForm.email) }}
                    {# <input type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500" required> #}
                </div>
                <div class="mb-4">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">Mot de passe</label>
                    {{ form_widget(registrationForm.plainPassword, {
                        label: 'Password'
                    }) }}
                    {# <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500" required> #}
                </div>
                {# <div class="mb-6">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">Confirmer le mot de passe</label>
                    <input type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-1 focus:ring-indigo-500" required>
                </div> #}
                {{ form_widget(registrationForm._token) }}
                <button type="submit" class="w-full bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                    Créer un compte
                </button>
            {{ form_end(registrationForm) }}
            <div class="mt-6 text-center">
                <span class="text-sm text-gray-600">Déjà un compte ?</span>
                <a href="{{ path('app_login')}}" class="text-sm text-indigo-600 hover:text-indigo-800 ml-1">Se connecter</a>
            </div>
        </div>
    </div>
</body>
</html>